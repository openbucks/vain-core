{
    "name": "vain/core",
    "type": "shared-package",
    "authors": [
        {
            "name": "Taras Girnyk",
            "email": "taras.p.gyrnik@gmail.com",
            "homepage": "https://github.com/allflame/vain-core",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Vain\\Core\\": "src/"
        }
    },
    "require": {
        "php": ">=7.0",
        "psr/log": "~1.0",
        "psr/http-message": "~1.0",
        "symfony/dependency-injection": "^3",
        "symfony/config": "^3",
        "symfony/yaml": "^3"
    },
    "suggest": {
        "vain/config": "Nested configuration files and caches",
        "vain/doctrine": "Doctrine bridge for entities",
        "vain/memcache": "Memcache implementation",
        "vain/redis": "Redis implementation",
        "vain/http": "PSR-7 implementation",
        "vain/operation": "Operation and collection implementation",
        "vain/time": "Immutable DateTime with handful methods"
    },
    "config": {
        "secure-http": false
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}